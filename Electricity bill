unit=int(input("Enter the units"))
if unit>300:
  a=50+(unit-100)*3
  print("Your bill amount="+format(a)
elif unit>200 and unit<=300:
  a=50+(unit-100)*1.5
  print("Your bill amount="+format(a))
elif unit>100 and unit<=200:
  a=50+(unit-100)*0.8
  print("Your bill amount="+format(a))
else:
  print("Your bill amount=50")
  
